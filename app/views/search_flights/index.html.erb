    <%#= end %>

  <%= f.button :submit %>
<% end %>

</section>

<section class="search-results">
<header>
<h1 class="h3">Results</h1>
</header>

<% @orrey.each do |trip| %>
<p>Price: <%= trip.sale_total %></P>
<p>Basis Code: <%= trip.pricing[0].fare[0].basis_code %></P>
<p>Origin: <%= trip.slice[0].segment[0].leg[0].origin %></P>
<p>Origin Departure: <%= trip.slice[0].segment[0].leg[0].departure_time %></p>
<p>Destination: <%= trip.pricing[0].fare[0].destination %></P>
<p>Aircraft: <%= trip.slice[0].segment[0].leg[0].aircraft %></p>
<p>Flight no: <%= trip.slice[0].segment[0].flight.number %></p>
<p>Carrier: <%= trip.slice[0].segment[0].flight.carrier %></p>
<% end %>

</section>


