<%= simple_form_for :search_flights, url: search_flights_url, as: 'inline_form',
  wrapper: :inline_form,
  html: { class: 'form-inline' } do |f| %>
  <%= f.error_notification %>

  <%= f.input :email, placeholder: 'Enter email' %>

  <%= f.input :password, placeholder: 'Password' %>

  <%= f.input :active, inline_label: 'Remember me' %>
  
    <%#= f.simple_fields_for(@post.custom_fields) do |cf| %>
