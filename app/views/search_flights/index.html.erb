<section class="search-form">
<%= form_for :search_flights, method: :get do |f| %>
<div class="input-group input-group-lg row">
   
    <div class="form-group col-md-2">
      <%= f.label :FlightDate, "Flight Date" %><br>
      <%= f.text_field :date_of_tour, "data-provide" => 'datepicker', class: "form-control input-md" %>
    </div>

<div class="form-group col-md-2">
<%= f.label :Origin %><br>
<%= f.select :Origin, [ 'Kolkata','Delhi','Mumbai' ], :prompt => 'Select One', class: "form-control input-md" %>
</div>

<div class="form-group col-md-2">
<%= f.label :Destination %><br>
<%= f.select :Destination, [ 'Kolkata','Delhi','Mumbai' ], :prompt => 'Select One', class: "form-control input-md" %>
</div>

<div class="form-group col-md-2">
<%= f.label :NoOfAdults, 'Number of Adults' %><br>
<%= f.select :NoOfAdults, [ 1,2,3 ], :prompt => 'Select One', class: "form-control input-md" %>
</div>

<div class="form-group col-md-2">
<%= f.label :NoOfChildren, 'Number of Children' %><br>
<%= f.select :NoOfChildren, [ 1,2,3 ], :prompt => 'Select One', class: "form-control input-md" %>
</div>


    <div class="form-group col-md-2">
      <%= f.label :ReturnDate, "Return Date" %><br>
      <%= f.text_field :date_of_tour, "data-provide" => 'datepicker', class: "form-control input-md" %>
    </div>
    
<span class="input-group-btn"><%= submit_tag "Find Flights", class: "btn btn-primary btn-lg" %></span>
</div>
<% end %>


